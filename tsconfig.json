{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./app",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./app/src/**/*.ts",
    "./app/src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ],
}
