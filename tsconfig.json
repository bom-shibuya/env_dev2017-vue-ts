{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "app/src/*"
      ]
    }
  },
  "include": [
    "./app/src/**/*.ts",
    "./app/src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
